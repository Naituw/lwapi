<struts>	
	
	
	<package name="user" namespace="/user" extends="json-default">
		
		<action name="update" class="com.wave.action.user.UpdateAction" >
			<result name="success" type="json">
				<param name="root">response</param>
			</result>
		</action>
		<action name="create" class="com.wave.action.user.CreateAction" >
			<result name="success" type="json">
				<param name="root">response</param>
			</result>
		</action>
		<action name="username_exists" class="com.wave.action.user.ExistsAction" >
			<result name="success" type="json">
				<param name="root">response</param>
			</result>
		</action>
	</package>
	
</struts>    
